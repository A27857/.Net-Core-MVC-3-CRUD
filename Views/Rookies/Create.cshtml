@model Person
@{
    ViewData["Title"] = "Create New Person";
}
<div>
<a href="@Url.ActionLink("Index", "Rookies")" class="btn btn-info mr-5"><i class="fa fa-arrow-left mr-2" aria-hidden="true"></i>Back</a>
<h3 class="d-inline-block mb-0">@ViewData["Title"]</h3>
</div>
    <hr />
        <div>@ViewBag.Data</div>
<div class="row">
